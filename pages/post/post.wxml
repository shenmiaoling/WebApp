
<!--pages/post/post.wxml-->

<!--hidden="{{video ? false : true}}"-->
<view hidden="{{video ? false : true}}">

  <!--<video src="{{src}}" class="post-img" controls="false">
    </video>-->
  <image class="post-img" src="http://cdn.litlepups.net/2016/04/09/medium_cute-dog-fluffy-mini-puppy-image-214796-on-favim-com.jpg"></image>
  <textarea bindinput="bindinput" class="text" maxlength="50" placeholder="添加视频描述，让更多人看到你的视频" />
  <view class="line"></view>
  <button class="post-btn {{postBtn ? 'color' : 'post-btn'}}" bindtap="handlePost" size="mini" >↑ 发布</button>

<view class="active-title">标签</view>
<view class="pull-block">
  <view class="pull-btn {{channel=='hot' ? 'label-color' : 'pull-btn'}}" data-value="hot" bindtap="chooseLabel">热门</view>
  <view class="pull-btn {{channel=='dobe' ? 'label-color' : 'pull-btn'}}" data-value="dobe" bindtap="chooseLabel" >逗比</view>
  <view class="pull-btn {{channel=='curious' ? 'label-color' : 'pull-btn'}}" data-value="curious" bindtap="chooseLabel" >猎奇</view>
  <view class="pull-btn {{channel=='entertainment' ? 'label-color' : 'pull-btn'}}" data-value="entertainment" bindtap="chooseLabel" >娱乐</view>
  <view class="pull-btn {{channel=='interCelebrity' ? 'label-color' : 'pull-btn'}}" data-value="interCelebrity" bindtap="chooseLabel" >网红</view>
  <view class="pull-btn {{channel=='society' ? 'label-color' : 'pull-btn'}}" data-value="society" bindtap="chooseLabel" >社会</view>
  <view class="pull-btn {{channel=='goddess' ? 'label-color' : 'pull-btn'}}" data-value="goddess" bindtap="chooseLabel" >女神</view>
  <view class="pull-btn {{channel=='movies' ? 'label-color' : 'pull-btn'}}" data-value="movies" bindtap="chooseLabel" >影视</view>
  <view class="pull-btn {{channel=='music' ? 'label-color' : 'pull-btn'}}" data-value="music" bindtap="chooseLabel" >音乐</view>
  <view class="pull-btn {{channel=='comic' ? 'label-color' : 'pull-btn'}}" data-value="comic" bindtap="chooseLabel" >动漫</view>
  <view class="pull-btn {{channel=='pet' ? 'label-color' : 'pull-btn'}}" data-value="pet" bindtap="chooseLabel" >萌宠</view>
  <view class="pull-btn {{channel=='sports' ? 'label-color' : 'pull-btn'}}" data-value="sports" bindtap="chooseLabel" >体育</view>
</view>
</view>
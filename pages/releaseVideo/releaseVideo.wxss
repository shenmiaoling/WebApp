/* pages/releaseVideo/releaseVideo.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: relative;
}

.blur-image {
  width: 100%;
  height: 240px;
  -webkit-filter: blur(10px); /* Chrome, Opera */
  -moz-filter: blur(10px);
  -ms-filter: blur(10px);
  filter: blur(10px);
}

.userinfo-avatar {
  position: absolute;
  top: 66px;
  width: 74px;
  height: 74px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 16px;
  position: absolute;
  top: 156px;
}

.userinfo-follow {
  color: #fff;
  font-size: 16px;
  position: absolute;
  top: 185px;
  left: 35%;
}

.userinfo-fan {
  color: #fff;
  font-size: 16px;
  position: absolute;
  top: 185px;
  right: 35%;
}

.cut {
  color: #fff;
  font-size: 16px;
  position: absolute;
  top: 185px;
}
.release-title{
    border-bottom: 1px solid lightgray;
    padding: 10px;
}
.public-count{
    color: gray
}
.no-pub{
    text-align: center;
}
.sad-emoji{
    font-size: 40px;
    color: #d8d8d8;
    margin-top: 88px;
    margin-bottom: 27px;
}
.tip-text{
    font-size: 18px;

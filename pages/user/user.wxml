<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="blur-image" src="{{userInfo.head_pic}}" ></image>
    <image class="userinfo-avatar" src="{{userInfo.head_pic}}" background-size="cover" bindtap="handleEdit"></image>
    <text class="userinfo-nickname">{{signature}}</text>
  </view>
  <view class="Row">
      <view class="Column" bindtap="releasedVideo">0</view>
      <view class="Column" bindtap="handleFollows">0</view>
      <view class="Column" bindtap="handleFans">0</view>
  </view>
  <view class="Row-text">
      <view class="Column text">视频</view>
      <view class="Column text">关注</view>
      <view class="Column text">粉丝</view>
  </view>
</view>
<view class="content-list" bindtap="handleFavorites">
  <image src="/images/hearta.png" class="content-ico"></image>
  <text class="content-text">我喜欢的</text>
  <a class="go"></a>
</view>
<view class="content-list" bindtap="handleHistory">
  <image src="/images/eye.png" class="content-ico"></image>
  <text class="content-text">播放历史</text>
  <a class="go"></a>
</view>
<view class="content-list" bindtap="handleHobby">
  <image src="/images/star.png" class="content-ico"></image>
  <text class="content-text">兴趣选择</text>
  <a class="go"></a>
</view>
<view class="content-list">
  <image src="/images/pen.png" class="content-ico"></image>
  <text class="content-text">反馈</text>
  <a class="go"></a>
</view>
<view class="content-list">
  <image src="/images/phone.png" class="content-ico"></image>
  <text class="content-text">版本选择</text>
  <a class="go"></a>
</view>


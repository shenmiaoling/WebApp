/* pages/user/user.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  /*padding-top: 66px;*/
  /*padding-bottom: 66px;*/
  /*background-color: #646d2b;*/
  width: 100%;
  position: relative;
}

.blur-image {
  width: 100%;
  height: 240px;
  -webkit-filter: blur(10px); /* Chrome, Opera */
  -moz-filter: blur(10px);
  -ms-filter: blur(10px);
  filter: blur(10px);
}

.userinfo-avatar {
  position: absolute;
  top: 66px;
  width: 74px;
  height: 74px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 16px;
  position: absolute;
  top: 156px;
}

.usermotto {
  margin-top: 200px;
}

.Row {
  text-align: center;
  display: table;
  width: 100%;
  table-layout: fixed;
  border-spacing: 10px;
}

.Column {
  display: table-cell;
}

.text {
  font-size: 18px;
  color: #9b9b9b;
}

.Row-text {
  text-align: center;
  display: table;
  width: 100%;
  table-layout: fixed;
  padding-bottom: 16px;
}

.content-list {
  font-size: 16px;
  border-bottom: 1px solid #c5c5c5;
  padding: 20px;
}

.content-ico {
  width: 19px;
  height: 20px;
  float: left;
}

.content-text {
  padding-left: 32px;
}

.go {
  display: block;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 17.5px;
  height: 17.5px;
  float: right;
  top: 0;
  right: 0;
}

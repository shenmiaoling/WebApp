/**index.wxss**/

.label {
  margin: 17rpx 20rpx;
  background-color: pink;
}

.label span {
  padding-right: 40rpx;
}

.menu {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  background: #fff;
  border-top: #eee solid 1px;
  border-bottom: #eee solid 1px;
}

.top-nav {
  white-space: nowrap;
  display: flex;
  width: 92%;
}

.top_btn {
  display: inline-block;
  margin: 10px;
  font-size: 32rpx;
  color: gray;
}

.pull-container {
  position: fixed;
  top: 1rpx;
  right: 0;
  background-image: linear-gradient(to right, rgba(255, 255, 255, 0.5), rgb(255, 255, 255));
  width: 70rpx;
  height: 70rpx;
  border-left: rgba(158, 158, 158, 0.54) solid 1px;
}

.pull_up {
  width: 44rpx;
  height: 44rpx;
  margin: 18rpx 8rpx;
}

.pull-block {
  text-align: center;
}

.pull-btn {
  display: inline-block;
  margin: 20rpx 35rpx;
  padding: 10rpx 25rpx;
  font-size: 25rpx;
  border-radius: 30rpx;
  background-color: rgba(158, 158, 158, 0.2);
}

.section {
  margin-left: -100rpx;
}

.search {
  margin-top: 100rpx;
  margin-bottom: 34rpx;
  width: 100%;
  border: gray solid 1px;
  border-radius: 50rpx;
  padding: 0 50rpx;
  font-size: 30rpx;
  background-image: url("../../images/search.png");
  background-size: 50rpx 50rpx;
  background-repeat: no-repeat;
  background-origin: content-box;
  background-position: -12%;
}

.tc {
  text-align: center;
  width: 100%;
}

.video-title {
  font-size: 32rpx;
  display: block;
  margin: 0 auto;
  padding-top: 18px;
  padding-bottom: 14px;
}

.video-bottom {
  margin-bottom: 35px;
}

.eye {
  width: 18px;
  height: 18px;
  float: left;
  margin-left: 20px;
}

.unlike {
  width: 18px;
  height: 18px;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
  display: inline-block;
}

.like {
   width: 18px;
  height: 18px;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
  display: inline-block;
}

.conment {
  width: 18px;
  height: 18px;
}

.share {
  width: 18px;
  height: 18px;
  float: right;
  margin-right: 10px;
}

.watch-count {
  float: left;
  font-size: 16px;
  padding-left: 5px;
}

.like-count {
  font-size: 16px;
  margin-right: 10px;
  margin-left: 10px;
}

.conment-count {
  margin-right: 10px;
  font-size: 16px;
  margin-left: 10px;
}

.right {
  float: right;
}


<!--index.wxml-->
<view class="container">
  <template name="B">
    <text> B template </text>
  </template>
  <view class="menu">
    <scroll-view scroll-x="true" class="top-nav">
      <view class="top_btn">热门</view>
      <view class="top_btn">逗比</view>
      <view class="top_btn">猎奇</view>
      <view class="top_btn">娱乐</view>
      <view class="top_btn">网红</view>
      <view class="top_btn">社会</view>
      <view class="top_btn">女神</view>
      <view class="top_btn">影视</view>
      <view class="top_btn">音乐</view>
      <view class="top_btn">动漫</view>
      <view class="top_btn">萌宠</view>
      <view class="top_btn">体育</view>
    </scroll-view>
    <view class="pull-container">
      <image src="/images/pull_up.png" class="pull_up" bindtap="pullLabel" hidden="{{pull ? true : false}}"></image>
      <image src="/images/pull_down.png" class="pull_up" bindtap="pullLabel" hidden="{{pull ? false : true}}"></image>
    </view>
    <view class="pull-block" hidden="{{pull ? false : true}}">
      <view class="pull-btn">热门</view>
      <view class="pull-btn">逗比</view>
      <view class="pull-btn">猎奇</view>
      <view class="pull-btn">娱乐</view>
      <view class="pull-btn">网红</view>
      <view class="pull-btn">社会</view>
      <view class="pull-btn">女神</view>
      <view class="pull-btn">影视</view>
      <view class="pull-btn">音乐</view>
      <view class="pull-btn">动漫</view>
      <view class="pull-btn">萌宠</view>
      <view class="pull-btn">体育</view>
    </view>
  </view>
  <view class="section">
    <input type="text" class="search" placeholder="大家都在搜：" /> </view>
  <view class="tc">
    <view wx:for="{{listLi}}" wx:key="{{index}}">
      <template name="video-model">
        <video src="{{item.video_url.vid_url}}" controls style="width:100%;height: 175px"></video>
        <view class="video-title">
          {{item.title}}
        </view>
        <view class="video-bottom">
          <image src="/images/eye.png" class="eye"></image>
          <span class="watch-count">{{item.view_number}}</span> 
          <view class="right">
            <view class="unlike {{like && vid==item._id? 'like' : 'unlike'}}" data-id="{{item._id}}" bindtap="clickFavorite"></view>
            <span class="like-count">{{item.like_number}}</span> 
            <image src="/images/conment.png" class="conment"></image>
            <span class="conment-count">{{item.comment_number}}</span> 
          </view>
        </view>
      </template>
    </view>
  </view>
  <template is="video-model" />
</view>
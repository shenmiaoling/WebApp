/* pages/flop/flop.wxss */

page {
  height: 80%;
}

swiper {
  padding-top: 15px;
  padding-bottom: 15px;
  padding: 0px 15px;
}
.swiper-item {
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  }

.avatar {
  width: 37px;
  height: 37px;
  border-radius: 50%;
  margin-left: 4px;
  margin-right: 12px;
  display: inline-block;
}

.user-name {
  display: inline-block;
  padding-bottom: 20px;
  vertical-align: middle;
}
.add-follow{
    margin-top: 12px;
    border: 1px solid #f14969;
    margin-right: 20px;
    padding: 4px 10px;
    border-radius: 5px;
    color: #f14969;
    float: right
}
.swiper-bottom {
  width: 85%;
  height: 16px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  display: block;
  margin: 0 auto;
}

.swiper-bottom2 {
  width: 80%;
  height: 16px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  display: block;
  margin: 0 auto;
}
.video-title {
  font-size: 32rpx;
  display: block;
  margin: 0 auto;
  padding-top: 18px;
  padding-bottom: 14px;
}

.video-bottom {
  margin-bottom: 35px;
}

.eye {
  width: 18px;
  height: 18px;
  float: left;
  margin-left: 20px;
}

.unlike {
  width: 18px;
  height: 18px;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
  display: inline-block;
}

.like {
   width: 18px;
  height: 18px;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
  display: inline-block;
}

.conment {
  width: 18px;
  height: 18px;
}

.share {
  width: 18px;
  height: 18px;
  float: right;
  margin-right: 10px;
}

.watch-count {
  float: left;
  font-size: 16px;
  padding-left: 5px;
}

.like-count {
  font-size: 16px;
  margin-right: 10px;
  margin-left: 10px;
}

.conment-count {
  margin-right: 10px;
  font-size: 16px;
  margin-left: 10px;
}

.right {
  float: right;
}
